<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".view.AddTrackAlbumFragment">

        <TextView
            android:id="@+id/track_add_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:enabled="true"
            android:paddingTop="5dp"
            android:text="@string/track_add_name_label"
            android:textColor="@color/main_orange"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/track_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/track_add_name_hint"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/track_add_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:enabled="true"
            android:paddingTop="5dp"
            android:text="@string/track_add_duration_label"
            android:textColor="@color/main_orange"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/track_add_minute_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/white"
                android:enabled="true"
                android:padding="5dp"
                android:text="@string/track_add_duration_minute_label"
                android:textColor="@color/main_orange"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/track_add_duration_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:hint="@string/track_add_duration_minute_label"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/track_add_second_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/white"
                android:inputType="number"
                android:padding="5dp"
                android:text="@string/track_add_second_label"
                android:textColor="@color/main_orange"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/track_add_duration_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:hint="@string/track_add_second_label"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/track_add_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:backgroundTint="@color/gray"
                android:enabled="true"
                android:padding="2dp"
                android:text="@string/track_add_cancel"
                android:textSize="18dp" />

            <Button
                android:id="@+id/track_add_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:backgroundTint="@color/main_orange"
                android:enabled="true"
                android:padding="8dp"
                android:text="@string/track_add_accept"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>