<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AlbumActivity" >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentAlbumContainerView"
        android:name="com.example.vinilos_mobile.view.AlbumListFragment"
        android:layout_width="413dp"
        android:layout_height="680dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_album_list" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentNavBarContainerView"
        android:name="com.example.vinilos_mobile.view.NavBarFragment"
        android:layout_width="419dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentAlbumContainerView" />

</androidx.constraintlayout.widget.ConstraintLayout>